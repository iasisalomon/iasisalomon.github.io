---
import MainLayout from './MainLayout.astro';
import Navbar from '../components/Navbar.astro';
import CustomFooter from '../components/CustomFooter.astro';

interface Props {
	title: string;
	description: string;
	pubDate: Date;
	heroImage?: string;
}

const { title, description, pubDate, heroImage } = Astro.props;

const formattedDate = pubDate ? pubDate.toLocaleDateString('en-us', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
}) : 'No date available';
---

<MainLayout title={title} description={description}>
	<Navbar />
	
	<article class="blog-post py-5 mt-5">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 mx-auto">
					<header class="post-header">
						<h1 class="post-title">{title}</h1>
						<div class="post-meta">
							<time datetime={pubDate?.toISOString()}>
								{formattedDate}
							</time>
						</div>
					</header>
					
					{heroImage && (
						<div class="hero-image">
							<img src={heroImage} alt={title} />
						</div>
					)}
					
					<div class="content">
						<slot />
					</div>
					
					<div class="post-footer">
						<a href="/blog" class="back-button">
							<span class="back-icon">‚Üê</span> Back to Articles
						</a>
					</div>
				</div>
			</div>
		</div>
	</article>
	
	<CustomFooter />
</MainLayout>

<style is:global>
	.blog-post {
		line-height: 1.8;
		max-width: 100%;
		margin: 0 auto;
	}

	.hero-image {
		margin: 0 0 3rem 0;
		border-radius: 8px;
		overflow: hidden;
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
	}

	.hero-image img {
		width: 100%;
		height: auto;
		display: block;
	}

	.post-header {
		margin-bottom: 3rem;
		border-bottom: 1px solid rgba(0, 0, 0, 0.1);
		padding-bottom: 1.5rem;
	}

	.post-title {
		font-size: 2.5rem;
		font-weight: 700;
		margin-bottom: 1rem;
		line-height: 1.2;
		letter-spacing: -0.02em;
		transition: color 0.3s ease;
	}

	.post-meta {
		font-size: 0.9rem;
		color: #666;
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.post-meta time {
		opacity: 0.8;
	}

	.content {
		font-size: 1.1rem;
	}

	.content h2 {
		font-size: 1.8rem;
		margin-top: 3rem;
		margin-bottom: 1.5rem;
		font-weight: 600;
		letter-spacing: -0.01em;
		color: #333;
	}
	
	.content h3 {
		font-size: 1.4rem;
		margin-top: 2.5rem;
		margin-bottom: 1rem;
		font-weight: 600;
		color: #444;
	}
	
	.content p {
		margin-bottom: 1.8rem;
		line-height: 1.8;
	}
	
	.content ul, .content ol {
		margin-bottom: 1.8rem;
		padding-left: 1.8rem;
	}
	
	.content li {
		margin-bottom: 0.7rem;
	}
	
	.content img {
		max-width: 100%;
		height: auto;
		border-radius: 8px;
		margin: 2.5rem 0;
		box-shadow: 0 5px 15px rgba(0,0,0,0.1);
		transition: transform 0.3s ease;
	}
	
	.content img:hover {
		transform: scale(1.01);
	}
	
	.content blockquote {
		border-left: 4px solid #333;
		padding: 1rem 0 1rem 1.5rem;
		margin: 2rem 0;
		font-style: italic;
		background-color: rgba(0,0,0,0.02);
		border-radius: 0 8px 8px 0;
	}
	
	.content hr {
		margin: 3rem 0;
		border-color: rgba(0,0,0,0.1);
	}
	
	.content a {
		color: #0055ff;
		text-decoration: none;
		border-bottom: 1px solid transparent;
		transition: border-color 0.2s ease;
	}
	
	.content a:hover {
		border-bottom-color: currentColor;
	}

	.post-footer {
		margin-top: 4rem;
		padding-top: 2rem;
		border-top: 1px solid rgba(0,0,0,0.1);
		display: flex;
		justify-content: flex-start;
	}

	.back-button {
		display: inline-flex;
		align-items: center;
		color: #333;
		font-weight: 500;
		text-decoration: none;
		padding: 0.6rem 1.2rem;
		border-radius: 4px;
		transition: all 0.2s ease;
		background-color: rgba(0,0,0,0.05);
	}

	.back-button:hover {
		background-color: rgba(0,0,0,0.1);
		transform: translateX(-4px);
	}

	.back-icon {
		margin-right: 0.5rem;
		font-size: 1.2em;
	}

	@media (max-width: 768px) {
		.post-title {
			font-size: 2rem;
		}
		
		.content {
			font-size: 1rem;
		}
		
		.content h2 {
			font-size: 1.6rem;
		}
		
		.content h3 {
			font-size: 1.3rem;
		}
	}

	@media (prefers-color-scheme: dark) {
		.blog-post {
			background-color: #f0f0f0;
			padding: 2rem;
			border-radius: 8px;
			box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
		}
		
		.post-title {
			color: #222;
		}
		
		.post-meta {
			color: #666;
		}
		
		.content h2, .content h3 {
			color: #333;
		}
		
		.post-header, .post-footer {
			border-color: rgba(0, 0, 0, 0.1);
		}
		
		.content blockquote {
			border-color: #666;
			background-color: rgba(0, 0, 0, 0.05);
		}
		
		.back-button {
			color: #333;
			background-color: rgba(0, 0, 0, 0.05);
		}
		
		.back-button:hover {
			background-color: rgba(0, 0, 0, 0.1);
		}
		
		.content a {
			color: #0055ff;
		}
		
		.content p, .content li {
			color: #444;
		}
	}
</style>
